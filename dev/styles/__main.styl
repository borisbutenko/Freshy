@import '__normalize.css'

*,
*::before,
*::after
  box-sizing: border-box

html
  font-size: 62.5%

body
  min-width: 120rem
  font-size: 1.4rem
  font-family: Hind

.section
  padding: 6.5rem 5.5rem
  max-width: 128rem
  margin: auto

  &__title
    font-size: 3.5rem
    text-transform: uppercase
    margin: 0
    color: #00a1eb
    font-weight: bold

  &__hr
    height: .1rem
    margin-top: 4rem
    margin-bottom: 4rem
    border: 0
    color: #a1a1a1
    background-color: #a1a1a1

    &--white
      color: #fff
      background-color: #fff

  &__par
    font-family: Hind
    color: #737373
    margin: 0
    line-height: 1.5

.button
  border: .1rem solid transparent
  outline: none
  color: #fff
  font-weight: bold
  background-color: #00a1eb
  border-radius: .5rem
  cursor: pointer
  transition: opacity .3s

  &--white
    color: #00a1eb
    background-color: #fff

  &::-moz-focus-inner
    padding: 0
    border: 0

  &:hover
    opacity: .7

.text
  &--centered
    text-align: center

@import '@font.styl'
@import '__header.styl'
@import '__footer.styl'