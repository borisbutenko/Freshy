@import '__normalize.css'
@import '@font.styl'
@import '__header.styl'

*,
*::before,
*::after
  box-sizing: border-box

html
  font-size: 62.5%

body
  min-width: 120rem
  font-size: 1.4rem
  font-family: Hind

.section
  padding: 6.5rem 5.5rem
  max-width: 128rem
  margin: auto

.button
  border: .1rem solid transparent
  outline: none
  color: #fff
  font-weight: bold
  background-color: #00a1eb
  border-radius: .5rem
  cursor: pointer

  &::-moz-focus-inner
    padding: 0
    border: 0

  &:hover
    opacity: .7