@import '__menu.styl'

.header
  width: 100%
  min-width: 120rem
  display: flex
  align-items: center
  justify-content: space-between
  padding: 3rem 5rem
  font-family: Montserrat
  position: absolute
  top: 0
  left: 0
  z-index: 100

  &__link
    font-size: 2.5rem
    text-transform: uppercase
    text-decoration: none
    color: #fff

    & span
      font-size: 2.6rem

    &:hover
      text-decoration: underline