fontHindPath = '../font/Hind/Hind-'

@font-face
  font-family: 'Hind'
  src: url(fontHindPath + 'Regular.ttf') format('truetype')
  font-weight: 300

@font-face
  font-family: 'Hind'
  src: url(fontHindPath + 'Bold.ttf') format('truetype')
  font-weight: 700

fontMontserratPath = '../font/Montserrat/Montserrat-'

@font-face
  font-family: 'Montserrat'
  src: url(fontMontserratPath + 'ExtraLight.ttf') format('truetype')
  font-weight: 100

@font-face
  font-family: 'Montserrat'
  src: url(fontMontserratPath + 'Regular.ttf') format('truetype')
  font-weight: 300

@font-face
  font-family: 'Montserrat'
  src: url(fontMontserratPath + 'Bold.ttf') format('truetype')
  font-weight: 700